#include <stdio.h>

void findAverage(int *arr,int n){
    int sum=0;
    for(int i=0;i<n;i++)sum+=arr[i];
    printf("Average is: %2.2f",(float)sum/n);
}
int main(){
    int n;
    printf("ENter size of array"); scanf("%d",&n);
    int a[n];
    for(int i=0;i<n;i++)scanf("%d",&a[i]);
    findAverage(a,n);
}
